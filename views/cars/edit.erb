<form action="/cars/<%= @car.id %>" method="POST">
  <div class="form-group">
    <label for="modal_name">modal_name</label>
    <input type="text" class="form-control" placeholder="modal_name" name="modal_name" value="<%= @car.modal_name %>">
  </div>
  <div class="form-group">
    <label for="color">color</label>
    <input type="text" class="form-control" placeholder="color" name="color" value="<%= @car.color %>">
  </div>
  <div class="form-group">
    <label for="year">year</label>
    <input type="date" class="form-control"  name="year" value="<%= @car.year %>">
  </div>

  <button type="submit" class="btn btn-default" value="PUT">Submit</button>

  <% if (@car.id != '') %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>
